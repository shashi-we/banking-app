<%= link_to "Back", admin_dashboard_path, class: "btn btn-primary btn-lg" %>
<div class="card">
  <div class="card-header bg-secondary text-white">
    <div class="row">
      <div class="col-sm-6">
        <h4>Account Number: <%= @customer.account_number %></h4>
      </div>
      <div class="col-sm-6">
        <h4>Balance: <%= number_to_currency(@customer.balance_amount, unit: 'Rs ') %></h4>
      </div>
    </div>
  </div>
  <div class="card-body bg-white">
    <div class="row">
      <div class="col-sm-4">
        <h6>Name: <%= @customer.name %></h6>
      </div>
      <div class="col-sm-4">
        <h6>Email: <%= @customer.email %></h6>
      </div>
      <div class="col-sm-4">
        <h6>address: <%= @customer.address %></h6>
      </div>
    </div>
  </div>
</div>
<hr/>

