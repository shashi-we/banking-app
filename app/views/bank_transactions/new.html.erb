<%= render 'shared/account_basic_info' %>

<div class="card border-secondary text-secondary">
  <div class="card-header">
    <h4 class="card-title"><%= transaction_title(@bank_transaction) %></h4>
  </div>
  <div class="card-body">
    <%= form_for @bank_transaction do |f| %>
      <%= f.hidden_field :transaction_type, value: @bank_transaction.transaction_type %>
      <%= f.hidden_field :bank_account_id, value: @bank_transaction.bank_account_id %>

      <%= form_group_for f, :transaction_amount  do %>
        <%= f.number_field :transaction_amount, class: "form-control", required: true, placeholder: "Enter amount" %>
      <% end %>
      <%= form_group_for f, :description do %>
        <%= f.text_field :description, class: "form-control", max: 60, placeholder: "Enter description" %>
      <% end %>

      <div class="form-group">
        <%= f.submit transaction_title(@bank_transaction), class: "btn btn-primary" %>
        <%= link_to "Cancel", dashboard_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
